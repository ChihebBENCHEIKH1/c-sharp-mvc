@{
    ViewData["Title"] = "Login Page";
}
@model string

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JM6WQb1Dkah4D"
          crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<div class="container-fluid h-100" style="margin-top:11%">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-sm-6 col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">@ViewData["Title"]</h5>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="username" class="font-weight-bold">Username:</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mb-3">Login</button>
                        <div class="text-center">
                            <a asp-action="ForgotPassword">Forgot password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi94NM"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-Smlep8VNlC6bPmD0E/1u1jPW4U<script"" </script>
<script>
    $(function () {
        // Use sweetalert2 to show an alert if login failed
        if ('@ViewBag.LoginFailed' === 'True') {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Invalid username or password!'
            })
        }
    });
</script>

